    "version": "0.2.0",
    "configurations": [

        {
            "cwd": "${workspaceRoot}",
            "executable": "./build/${workspaceFolderBasename}.elf",
            "name": "Debug ST-UTIL",
            "request": "attach",
            "type": "cortex-debug",
            "servertype": "stutil"
        },
        {
            "cwd": "${workspaceRoot}",
            "executable": "./build/${workspaceFolderBasename}.elf",
            "name": "Debug openocd",
            "request": "attach",
            "type": "cortex-debug",
            "servertype": "openocd",
            "v1": false,
            "gdbTarget": "localhost:3333",
            "showDevDebugOutput": false,
            "device": "STM32F103C8Tx",
            "rtos": "FreeRTOS",
            "configFiles": [
                "./cks32blue_pill.cfg"
            ]
        }
    ]
